<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property resource="config/application.properties"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!--<filter class="ch.qos.logback.classic.filter.LevelFilter">-->
            <!--<level>INFO</level>-->
            <!--<level>DEBUG</level>-->
            <!--<onMatch>ACCEPT</onMatch>-->
            <!--<onMismatch>DENY</onMismatch>-->
        <!--</filter>-->

        <!--<file>${catalina.home:-.}/israjhaliri.com-log/app.log</file>-->
        <file>${path.log}/israjhaliri.com-log/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">

            <fileNamePattern>
                <!--${catalina.home:-.}/israjhaliri.com-log/app.log.%d{yyyy-MM-dd}.log.gz-->
                ${path.log}/israjhaliri.com-log/app.log.%d{yyyy-MM-dd}.log.gz
            </fileNamePattern>

            <maxHistory>365</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>

    <include resource="logback.${spring.profiles.active}.xml" />

</configuration>